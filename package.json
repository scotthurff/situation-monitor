{
	"name": "situation-monitor",
	"description": "Real-time dashboard for monitoring global news, markets, and geopolitical events",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:unit": "vitest run",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/svelte": "^5.3.1",
		"@types/d3": "^7.4.3",
		"@types/node": "^25.0.10",
		"autoprefixer": "^10.4.23",
		"jsdom": "^27.4.0",
		"postcss": "^8.5.6",
		"prettier": "^3.8.1",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.17"
	},
	"dependencies": {
		"d3": "^7.9.0",
		"topojson-client": "^3.1.0"
	}
}
